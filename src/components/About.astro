---
import { Image } from 'astro:assets';
// import me from '../assets/IMG_2791.HEIC';
import me from '../assets/IMG_4315.PNG';
// import me from '../assets/IMG_0989.jpg';

import { Icon } from 'astro-icon/components';
---

<section id="about">
	<header class="header-section">
		<h1>Keigo Kusumegi</h1>
	</header>
	
	<div class="container">
		<div class="profile-section">
			<div class="profile-image-wrapper">
				<Image src={me} alt="Keigo Kusumegi" class="profile-image" />
			</div>
			
			<div class="profile-links">
				<div class="quick-links">
					<a href="/CV.pdf" class="link-button secondary">
						CV (July 2025)
					</a>
				</div>
				
				<div class="social-icons">
					<a href="https://scholar.google.com/citations?user=m8nlOKIAAAAJ" class="social-link" aria-label="Google Scholar">
						<Icon name="googlescholar" />
					</a>
					<a href="https://www.linkedin.com/in/keigo-kusumegi-b6127a205/" class="social-link" aria-label="LinkedIn">
						<Icon name="linkedin-logo" />
					</a>
					<a href="https://github.com/Keygoksmg?tab=repositories" class="social-link" aria-label="GitHub">
						<Icon name="github-logo" />
					</a>
					<a href="https://bsky.app/profile/keigoksmg.bsky.social" class="social-link" aria-label="Bluesky">
						<Icon name="bluesky" />
					</a>
					<a href="https://x.com/keigoksmg" class="social-link" aria-label="Twitter/X">
						<Icon name="twitter" />
					</a>
				</div>
			</div>
		</div>
		
		<div class="bio-section">
			<p class="bio-intro">
				I'm Keigo, a Ph.D. student in <a href="https://infosci.cornell.edu/">Information Science</a> at Cornell University advised by <a href="https://www.yianyin.net/">Yian Yin</a>.
			</p>
			<p>
				My research focuses on understanding collective behavior and the interactions between individuals and society that drive innovation and success. 
				To explore these topics, I apply methods from Network Science, the Science of Science, and Computational Social Science.
			</p>
			<p>
				Currently, I am working on projects that examine team science in interdisciplinary collaborations and the impact of Large Language Models on scientific progress and innovation.
			</p>
			<p>
				I previously studied at the <a href="https://www.tsukuba.ac.jp/en/">University of Tsukuba</a>, Japan.
			</p>
		</div>
	</div>	
</section>

<style>
	#about {
		margin-bottom: var(--space-2xl);
	}

	.header-section {
		margin-bottom: var(--space-xl);
	}

	.container {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: var(--space-2xl);
		align-items: start;
	}

	.profile-section {
		display: flex;
		flex-direction: column;
		gap: var(--space-lg);
	}

	.profile-image-wrapper {
		position: relative;
	}

	.profile-image {
		width: 100%;
		max-width: 240px;
		height: auto;
		border-radius: var(--radius-lg);
		box-shadow: var(--shadow-md);
		transition: transform 0.2s ease, box-shadow 0.2s ease;
	}

	.profile-image:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
	}

	.profile-links {
		display: flex;
		flex-direction: column;
		gap: var(--space-lg);
	}

	.quick-links {
		display: flex;
		flex-direction: column;
		gap: var(--space-sm);
	}

	.link-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: var(--space-sm) var(--space-md);
		border-radius: var(--radius-md);
		font-weight: 500;
		font-size: 0.875rem;
		text-decoration: none;
		transition: all 0.2s ease;
		border: 1px solid transparent;
	}

	.link-button.primary {
		background-color: var(--background-subtle);
		color: var(--text-primary);
		border-color: var(--border-light);
	}

	.link-button.primary:hover {
		background-color: var(--accent-blue-light);
		border-color: var(--accent-blue);
		color: var(--accent-blue);
	}

	.link-button.secondary {
		background-color: var(--background-subtle);
		color: var(--text-primary);
		border-color: var(--border-light);
	}

	.link-button.secondary:hover {
		background-color: var(--accent-blue-light);
		border-color: var(--accent-blue);
		color: var(--accent-blue);
	}

	.social-icons {
		display: flex;
		gap: var(--space-md);
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: var(--radius-md);
		background-color: var(--background-subtle);
		color: var(--text-secondary);
		transition: all 0.2s ease;
		text-decoration: none;
	}

	.social-link:hover {
		background-color: var(--accent-blue);
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.social-link [data-icon] {
		font-size: 1.25rem;
	}

	.bio-section {
		display: flex;
		flex-direction: column;
		gap: var(--space-md);
	}

	.bio-intro {
		font-size: 1.125rem;
		font-weight: 500;
		color: var(--text-primary);
		margin-bottom: var(--space-sm);
	}

	/* Mobile responsiveness */
	@media (max-width: 768px) {
		.container {
			grid-template-columns: 1fr;
			gap: var(--space-xl);
		}

		.profile-section {
			display: grid;
			grid-template-columns: auto 1fr;
			gap: var(--space-lg);
			align-items: start;
		}

		.profile-image {
			max-width: 160px;
		}

		.quick-links {
			flex-direction: row;
			flex-wrap: wrap;
		}

		.link-button {
			flex: 1;
			min-width: 120px;
		}
	}

	@media (max-width: 480px) {
		.profile-section {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.quick-links {
			flex-direction: column;
		}

		.social-icons {
			justify-content: center;
		}
	}
</style>
